<h1><%= "Name: #{@guest.name}" %></h1>
<div class="rooms">
  <% @rooms.each do |room| %>
    <%= room.suite %><br>
    <ul> 
      <li><%= room.rate %></li>
      <li><%= room.hotel.name %></li>
    </ul>
  <% end %>
</div>
<div class="form">
<b>Add a New Room</b>
 <%= form_with url: "/guests/#{@guest.id}/rooms", method: :post, local: true do |form| %>
        <%= form.label :room_id, "Room Id:  "%><br><br>
        <%= form.number_field :room_id %>
        <%= form.submit "Submit" %>
      <% end %>
</div>